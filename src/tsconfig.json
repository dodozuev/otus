{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Utils/*": ["src/utils/*"],
      "@Modules/*": ["src/modules/*"]
    },
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
