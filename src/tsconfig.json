{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "scripts/**/*", "lessons/**/*"],
  "exclude": ["node_modules"]
}
